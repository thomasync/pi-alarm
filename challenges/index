			#root {
				display: flex;
				justify-content: center;
				align-items: center;
				width: 100%;
				height: 100%;
				text-align: center;
			}

			#alarm {
				display: none;
				opacity: 0;
				transition: opacity 1s ease;
			}

			h1 {
				margin: 0;
				font-size: 70px;
			}

			h2 {
				margin: 20px 0 0 0;
